<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/loginActivity">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.login.ui.home.HomeFragment"
            android:label="@string/title_home"
    />

    <fragment
            android:id="@+id/navigation_dashboard"
            android:name="com.example.loginapp.ui.dashboard.DashboardFragment"
            android:label="@string/title_dashboard"
            tools:layout="@layout/fragment_dashboard"/>

    <fragment
            android:id="@+id/navigation_notifications"
            android:name="com.example.loginapp.ui.notifications.NotificationsFragment"
            android:label="@string/title_notifications"
            tools:layout="@layout/fragment_notifications"/>

    <activity android:id="@+id/loginActivity" android:name="com.example.loginapp.ui.login.LoginActivity"
              android:label="activity_login" tools:layout="@layout/activity_login"/>

</navigation>